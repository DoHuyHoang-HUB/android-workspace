<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/background_casino"
    tools:context=".ui.twoplayer.TwoPlayerFragment">

    <LinearLayout
        android:id="@+id/layout_player_2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/card_1_player_2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/b1fv"
            tools:srcCompat="@drawable/b1fv" />

        <ImageView
            android:id="@+id/card_2_player_2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/b1fv"
            tools:srcCompat="@drawable/b1fv" />

        <ImageView
            android:id="@+id/card_3_player_2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/b1fv"
            tools:srcCompat="@drawable/b1fv" />

    </LinearLayout>

    <TextView
        android:id="@+id/result_player_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/alegreya_sans_sc_extrabold"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_player_2"
        tools:text="Kết quả người chơi máy" />

    <TextView
        android:id="@+id/text_ti_so"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sigmarone_regular"
        android:includeFontPadding="false"
        android:text="0-0"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Người chơi 1 win"
        android:fontFamily="@font/sigmarone_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_ti_so"
        android:textSize="30sp"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        tools:visibility="visible"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/button_start_game"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_button_start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans_sc_extrabold"
        android:includeFontPadding="false"
        android:text="Bắt đầu"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/button_start_game"
        app:layout_constraintEnd_toEndOf="@id/button_start_game"
        app:layout_constraintStart_toStartOf="@id/button_start_game"
        app:layout_constraintTop_toTopOf="@id/button_start_game" />

    <LinearLayout
        android:id="@+id/layout_player_1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/button_start_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/card_1_player_1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/b1fv"
            tools:srcCompat="@drawable/b1fv" />

        <ImageView
            android:id="@+id/card_2_player_1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/b1fv"
            tools:srcCompat="@drawable/b1fv" />

        <ImageView
            android:id="@+id/card_3_player_1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/b1fv"
            tools:srcCompat="@drawable/b1fv" />

    </LinearLayout>

    <TextView
        android:id="@+id/result_player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/alegreya_sans_sc_extrabold"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/layout_player_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Kết quả" />

</androidx.constraintlayout.widget.ConstraintLayout>
