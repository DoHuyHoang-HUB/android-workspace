<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/background_casino"
    tools:context=".ui.gamemode.GameModeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_one_player"
        android:textColor="@color/white"
        android:fontFamily="@font/sigmarone_regular"
        android:includeFontPadding="false"
        android:textSize="30sp"
        android:layout_marginTop="80dp"
        android:text="Chọn chế độ chơi" />

    <ImageButton
        android:id="@+id/button_one_player"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans_sc_extrabold"
        android:includeFontPadding="false"
        android:text="1 người chơi"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/button_one_player"
        app:layout_constraintEnd_toEndOf="@id/button_one_player"
        app:layout_constraintStart_toStartOf="@id/button_one_player"
        app:layout_constraintTop_toTopOf="@id/button_one_player" />

    <ImageButton
        android:id="@+id/button_two_player"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_one_player" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans_sc_extrabold"
        android:includeFontPadding="false"
        android:text="Chơi với máy"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/button_two_player"
        app:layout_constraintEnd_toEndOf="@id/button_two_player"
        app:layout_constraintStart_toStartOf="@id/button_two_player"
        app:layout_constraintTop_toTopOf="@id/button_two_player" />

    <ImageButton
        android:id="@+id/button_auto_game"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_two_player" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans_sc_extrabold"
        android:includeFontPadding="false"
        android:text="Auto"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/button_auto_game"
        app:layout_constraintEnd_toEndOf="@id/button_auto_game"
        app:layout_constraintStart_toStartOf="@id/button_auto_game"
        app:layout_constraintTop_toTopOf="@id/button_auto_game" />

</androidx.constraintlayout.widget.ConstraintLayout>