<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/background_casino"
    tools:context=".ui.start.StartFragment">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_start_game"
        android:textColor="@color/white"
        android:fontFamily="@font/sigmarone_regular"
        android:includeFontPadding="false"
        android:textSize="40sp"
        android:layout_marginTop="80dp"
        android:text="Casino game" />

    <ImageButton
        android:id="@+id/button_start_game"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans_sc_extrabold"
        android:includeFontPadding="false"
        android:text="Bắt đầu"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/button_start_game"
        app:layout_constraintEnd_toEndOf="@id/button_start_game"
        app:layout_constraintStart_toStartOf="@id/button_start_game"
        app:layout_constraintTop_toTopOf="@id/button_start_game" />

</androidx.constraintlayout.widget.ConstraintLayout>